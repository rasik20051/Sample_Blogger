<%= form_for(@article) do |f|%>
<ul>
	<!--<%= pluralize(@article.errors.count,"error")%>-->
	<% @article.errors.full_messages.each do |error|%>
	<li><%= error %></li>
<% end %>
</ul>
<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :body %>
<%= f.text_field :body %>
</p>

<p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
</p>

<p>
<%= f.submit "Submit" %>
</p>
<% end %>